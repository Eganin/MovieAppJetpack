<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/holder_actor_width"
    android:layout_height="@dimen/holder_actor_height"
    android:layout_margin="@dimen/actor_card_margin_top"
    android:background="@color/background_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_color"
        >
        <ImageView
            android:id="@+id/image_cast"
            android:layout_width="@dimen/image_cast_w_h"
            android:layout_height="@dimen/image_cast_w_h"
            android:scaleType="centerCrop"
            tools:src="@drawable/actor_test_image"
            android:contentDescription="@string/image_actor_description" />

        <TextView
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/actor_name_color"
            android:textSize="@dimen/actor_cast_size"
            tools:text="Robert Downey Jr."
            android:id="@+id/name_cast"
            android:layout_width="@dimen/image_cast_w_h"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>